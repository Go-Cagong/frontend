<?xml version="1.0" encoding="utf-8"?>
<!-- 레트로 카드 스타일 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item
        android:left="0dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/retro_shadow" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Main card -->
    <item
        android:bottom="4dp"
        android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/retro_white" />
            <stroke
                android:width="3dp"
                android:color="@color/coffee_medium" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
