<?xml version="1.0" encoding="utf-8"?>
<!-- 레트로 프라이머리 버튼 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="0dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/retro_shadow" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Button body -->
    <item
        android:bottom="4dp"
        android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/coffee_caramel" />
            <stroke
                android:width="3dp"
                android:color="@color/coffee_espresso" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
