<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Handle Bar -->
        <View
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:background="@color/gray_400" />

        <!-- Header Section -->


        <!-- Images Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Main Image -->
            <ImageView
                android:id="@+id/iv_cafe_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/coffee_main2" />

            <!-- Sub Images Grid -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="true">

                <ImageView
                    android:id="@+id/iv_cafe_sub1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coffee_main2" />

                <ImageView
                    android:id="@+id/iv_cafe_sub2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coffee_main2" />

                <ImageView
                    android:id="@+id/iv_cafe_sub3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coffee_main2" />

                <ImageView
                    android:id="@+id/iv_cafe_sub4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coffee_main2" />
            </GridLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/white" />

        <!-- Header Section - Toss Style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="28dp"
            android:paddingBottom="24dp">

            <!-- Cafe Name Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_cafe_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="카페 꼼마"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="-0.03"
                    android:paddingEnd="12dp" />

                <!-- Bookmark Icon Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:backgroundTint="@android:color/transparent"
                    app:icon="@drawable/ic_bookmark"
                    app:iconTint="@color/gray_500"
                    app:iconSize="26dp"
                    app:cornerRadius="0dp"
                    app:elevation="0dp"
                    app:rippleColor="#20000000"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp" />
            </LinearLayout>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/gray_50"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"
                    app:tint="@color/yellow_600"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8 / 5.0"
                    android:textColor="@color/gray_900"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_100" />

        <!-- Location Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인천 연수구 센트럴로 263"
                    android:textSize="15sp"
                    android:textColor="@color/gray_900" />
            </LinearLayout>



            <!-- Hours & Phone Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Hours -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="영업시간"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tv_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00 - 22:00"
                        android:textSize="15sp"
                        android:textColor="@color/gray_900" />
                </LinearLayout>

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전화번호"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="032-123-4567"
                        android:textSize="15sp"
                        android:textColor="@color/gray_900" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_100" />


        <!-- Quick Info Tags -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Atmosphere Tag -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/gray_100"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분위기"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/cafe_atmosphere"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="편안함"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900" />
                </LinearLayout>

                <!-- Price Tag -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/gray_100"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아메리카노"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/cafe_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4,500원"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900" />
                </LinearLayout>

                <!-- Parking Tag -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/gray_100"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주차"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/cafe_parking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가능"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_100" />


        <!-- Cafe Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="28dp"
            android:paddingBottom="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카페 정보에요 ☕️"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="넓은 공간과 편안한 좌석이 인상적이에요."
                android:textSize="15sp"
                android:textColor="@color/gray_700"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_100" />



        <!-- AI Summary Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="28dp"
            android:paddingBottom="28dp">



            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="AI가 리뷰를 요약했어요 ✨" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/gray_900" android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tv_ai_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="넓은 공간과 편안한 좌석이 인상적이에요."
                android:textSize="15sp"
                android:textColor="@color/gray_700"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>


        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_100" />

        <!-- Reviews Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="28dp"
            android:paddingBottom="20dp">

            <!-- Reviews Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이런 리뷰를 남겼어요"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_all_saved"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체보기"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:textStyle="normal"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="0dp"
                    app:elevation="0dp" />
            </LinearLayout>

            <!-- Reviews RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_preview_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
