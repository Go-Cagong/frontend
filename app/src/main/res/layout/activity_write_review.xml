<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <ImageButton
            android:gravity="center_vertical"
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="뒤로가기" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰 남기기"
                android:textSize="18sp"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvCafeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카페 이름"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Info Alert -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_error_circle"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/yellow" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="영수증 사진을 올려야 리뷰 등록이 가능합니다."
                    android:textSize="14sp"
                    android:textColor="@color/yellow"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Receipt Photo Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영수증 사진"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Image Preview Container -->

            <!-- Image Preview Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp">

                <!-- Placeholder -->
                <LinearLayout
                    android:id="@+id/layoutImagePlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사진을 선택하거나 촬영해주세요"
                        android:textSize="14sp"
                        android:textColor="@color/text_hint" />
                </LinearLayout>

                <!-- Image Preview -->
                <ImageView
                    android:id="@+id/ivReceiptPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:background="@android:color/white" />

                <!-- Remove Button -->
                <ImageView
                    android:id="@+id/ivRemoveImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_close"
                    android:padding="6dp"
                    android:elevation="4dp"
                    android:visibility="gone" />
            </FrameLayout>


            <!-- Camera/Gallery Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnCamera"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="사진 촬영"
                    android:backgroundTint="@color/yellow_primary"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/ic_camera"
                    android:drawablePadding="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnGallery"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="갤러리 선택"
                    android:backgroundTint="@color/yellow_primary"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/ic_image"
                    android:drawablePadding="8dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


            <!-- Receipt Status -->
            <LinearLayout
                android:id="@+id/layoutReceiptStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/gray"
                android:padding="12dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <!-- 상태 아이콘 -->
                <ImageView
                    android:id="@+id/ivReceiptStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone" />

                <!-- 상태 텍스트 -->
                <TextView
                    android:id="@+id/tvReceiptStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영수증 확인 중..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>


            <!-- Rating Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="별점"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="0"
                    style="@style/Widget.AppCompat.RatingBar"
                    android:progressTint="@color/star_yellow"
                    android:secondaryProgressTint="@color/gray" />

                <TextView
                    android:id="@+id/tvRatingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="12dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Review Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etReview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:padding="16dp"
                android:gravity="top|start"
                android:hint="카페 이용 경험을 자세히 작성해주세요.&#10;&#10;예시:&#10;- 분위기와 좌석 배치&#10;- 콘센트와 와이파이 상태&#10;- 음료 및 가격&#10;- 소음 정도"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="최소 10자 이상 작성해주세요"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint" />

                <TextView
                    android:id="@+id/tvCharCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0자"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint" />
            </LinearLayout>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="리뷰 등록하기"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:enabled="false"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
