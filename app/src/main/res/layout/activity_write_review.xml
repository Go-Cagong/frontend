<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_50">

    <!-- Header - Toss Style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="뒤로가기" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰 작성"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:letterSpacing="-0.02" />

            <TextView
                android:id="@+id/tvCafeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카페 이름"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="28dp"
            android:paddingBottom="28dp">

            <!-- Big Title - Toss Style -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떠셨나요?"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="-0.04"
                android:layout_marginBottom="32dp" />

            <!-- Rating Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="별점"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:letterSpacing="-0.02"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="36dp">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="0"
                    style="@style/Widget.AppCompat.RatingBar"
                    android:progressTint="@color/yellow_600"
                    android:secondaryProgressTint="@color/gray_200" />

                <TextView
                    android:id="@+id/tvRatingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:layout_marginStart="16dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Review Text Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:letterSpacing="-0.02"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etReview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/gray_50"
                android:padding="16dp"
                android:gravity="top|start"
                android:hint="카페 이용 경험을 자세히 작성해주세요&#10;&#10;예시:&#10;· 분위기와 좌석 배치&#10;· 콘센트와 와이파이 상태&#10;· 음료 및 가격&#10;· 소음 정도"
                android:textSize="15sp"
                android:textColor="@color/gray_900"
                android:textColorHint="@color/gray_500"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:lineSpacingMultiplier="1.4"
                android:importantForAutofill="no"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="최소 10자 이상 작성해주세요"
                    android:textSize="13sp"
                    android:textColor="@color/gray_500" />

                <TextView
                    android:id="@+id/tvCharCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0자"
                    android:textSize="13sp"
                    android:textColor="@color/gray_600" />
            </LinearLayout>

            <!-- Review Images Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 추가 (선택)"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:letterSpacing="-0.02"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReviewCamera"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="사진 촬영"
                    app:backgroundTint="@color/gray_100"
                    app:cornerRadius="0dp"
                    app:elevation="0dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    app:icon="@drawable/ic_camera_new"
                    app:iconTint="@color/gray_900"
                    app:iconPadding="8dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReviewGallery"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="갤러리 선택"
                    app:backgroundTint="@color/gray_100"
                    app:cornerRadius="0dp"
                    app:elevation="0dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    app:icon="@drawable/ic_gallery_new"
                    app:iconTint="@color/gray_900"
                    app:iconPadding="8dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/scrollReviewImages"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:fillViewport="false"
                android:scrollbars="none"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/layoutReviewImages"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical" />
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Button Area - Toss Style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="리뷰 등록하기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            app:backgroundTint="@color/yellow_primary"
            app:cornerRadius="0dp"
            app:elevation="0dp"
            android:enabled="false" />
    </LinearLayout>
</LinearLayout>
