<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gradient_white_end">

    <!-- 로고 이미지 -->

    <!-- 앱 이름 -->

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="281dp"
        android:layout_height="221dp"
        android:layout_marginTop="136dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/avd_bird_coffee_steam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- 서브 타이틀 -->
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="-0.02"
        android:text="@string/app_name"
        android:textColor="@color/coffee_primary"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나만의 공부 공간을 한 눈에"
        android:textSize="15sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="sans-serif"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 로그인 박스 카드뷰 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_login"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="48dp"
        app:cardCornerRadius="28dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 로그인 버튼 컨테이너 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Google Login -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_google_login"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="12dp"
                android:text="@string/login_google"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/surface"
                app:icon="@drawable/ic_google"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@null"
                app:strokeColor="@color/cream"
                app:strokeWidth="1dp"
                app:cornerRadius="14dp"
                app:elevation="0dp" />

            <!-- Kakao Login -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_kakao_login"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="12dp"
                android:text="@string/login_kakao"
                android:textColor="@color/kakao_brown"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/kakao_yellow"
                app:icon="@drawable/ic_kakao"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/kakao_brown"
                app:cornerRadius="14dp"
                app:elevation="0dp" />

            <!-- Naver Login -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_naver_login"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/login_naver"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/naver_green"
                app:icon="@drawable/naver"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@null"
                app:cornerRadius="14dp"
                app:elevation="0dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 약관 텍스트 -->
    <TextView
        android:id="@+id/tv_terms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login_terms"
        android:textSize="11sp"
        android:textColor="@color/text_tertiary"
        android:gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
