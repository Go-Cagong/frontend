<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_marginBottom="1dp">

    <!-- Profile Picture - Toss Style Circle -->
    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile_cat"
        android:background="@drawable/bg_profile_circle"
        android:padding="8dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="top" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Header: User + Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="유저 이름"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:letterSpacing="-0.02" />

            <TextView
                android:id="@+id/tvReviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-01-01"
                android:textColor="@color/gray_500"
                android:textSize="13sp" />
        </LinearLayout>

    <!-- Rating Bar -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginBottom="0dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/yellow_600"
            android:rating="4"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:stepSize="1"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

    <!-- Review Text -->
    <TextView
        android:id="@+id/tvReviewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리뷰 내용이 들어갑니다."
        android:textSize="15sp"
        android:textColor="@color/gray_700"
        android:lineSpacingMultiplier="1.4"
        android:layout_marginBottom="12dp" />

        <!-- Review Images -->
        <HorizontalScrollView
            android:id="@+id/scrollReviewImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layoutReviewImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>
