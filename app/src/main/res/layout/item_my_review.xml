<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp"
    android:background="@android:color/white">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 상단 : 카페 이미지 + 이름 + 별점 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCafeImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_cafe1_img" />

            <LinearLayout
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCafeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카페 이름"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:progressTint="@color/star_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:rating="4"
                    android:layout_marginStart="-50dp"
                    android:isIndicator="true"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvReviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="리뷰 내용이 여기에 들어갑니다."
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />
        <!-- 리뷰 사진 (있을 경우 표시) -->
        <HorizontalScrollView
            android:id="@+id/scrollReviewImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layoutReviewImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp" />
        </HorizontalScrollView>
        <!-- 하단 : 삭제 버튼 -->
        <TextView
            android:id="@+id/btnDelete"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:textColor="@color/red"
            android:text="삭제"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
