<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_50">

    <!-- Header - Toss Style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="뒤로가기" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영수증 인증하기"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:letterSpacing="-0.02" />

            <TextView
                android:id="@+id/tvCafeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카페 이름"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="28dp"
            android:paddingBottom="28dp">

            <!-- Big Number Title - Toss Style -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영수증을\n확인해주세요"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="-0.04"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="12dp" />

            <!-- Info Alert - Toss Style -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/yellow_light"
                android:padding="16dp"
                android:layout_marginBottom="36dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_error_circle"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="알림" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="영수증 인증 후 리뷰를 작성할 수 있어요"
                    android:textSize="14sp"
                    android:textColor="@color/gray_900"
                    android:lineSpacingMultiplier="1.4" />
            </LinearLayout>

            <!-- Image Preview Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="@color/gray_100"
                android:layout_marginBottom="20dp">

                <!-- Placeholder -->
                <LinearLayout
                    android:id="@+id/layoutImagePlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_image"
                        android:layout_marginBottom="16dp"
                        android:contentDescription="이미지 아이콘" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="영수증 사진을 선택하거나 촬영해주세요"
                        android:textSize="15sp"
                        android:textColor="@color/gray_600" />
                </LinearLayout>

                <!-- Image Preview -->
                <ImageView
                    android:id="@+id/ivReceiptPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="영수증 미리보기" />

                <!-- Remove Button -->
                <ImageView
                    android:id="@+id/ivRemoveImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="12dp"
                    android:src="@drawable/ic_close"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:contentDescription="이미지 제거" />
            </FrameLayout>

            <!-- Camera/Gallery Buttons - Toss Style -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCamera"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="사진 촬영"
                    android:textColor="@color/gray_900"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/gray_100"
                    app:cornerRadius="0dp"
                    app:elevation="0dp"
                    app:icon="@drawable/ic_camera_new"
                    app:iconPadding="8dp"
                    app:iconTint="@color/gray_900" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGallery"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="갤러리 선택"
                    app:backgroundTint="@color/gray_100"
                    app:cornerRadius="0dp"
                    app:elevation="0dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    app:icon="@drawable/ic_gallery_new"
                    app:iconTint="@color/gray_900"
                    app:iconPadding="8dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Receipt Status -->
            <LinearLayout
                android:id="@+id/layoutReceiptStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/gray_50"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivReceiptStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="상태 아이콘" />

                <TextView
                    android:id="@+id/tvReceiptStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="영수증 확인 중..."
                    android:textSize="15sp"
                    android:textColor="@color/gray_900" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Button Area - Toss Style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="다음"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            app:backgroundTint="@color/yellow_primary"
            app:cornerRadius="0dp"
            app:elevation="0dp"
            android:enabled="false" />
    </LinearLayout>
</LinearLayout>
